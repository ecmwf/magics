<magics>
      <class name="MagicsGlobal" directory="common" action="pnew">
            <parameter member="silent"
                  to="bool"
                  default="off"
                  from="string"
                  name="magics_silent">
                  <documentation>Turn on/off</documentation>
            </parameter>
            <parameter member="compatibility"
                  to="bool"
                  default="true"
                  from="string"
                  name="magics_backward_compatibility">
                  <documentation>Turn on/off</documentation>
            </parameter>
            <parameter member="strict"
                  to="bool"
                  default="false"
                  from="string"
                  name="magics_strict_mode">
                  <documentation>Turn on/off</documentation>
            </parameter>
      </class>
</magics>
