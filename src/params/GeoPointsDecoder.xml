<magics>
	<class action="pgeo"
		directory="decoders"
		prefix="geo/geo_input"
		xmltag="geopoints"
		name="GeoPointsDecoder">
		<parameter member="path"
			to="string"
			default=""
			from="string"
			name="geo_input_file_name">
			<release>Magics++1.1</release>
			<documentation>The name of the input file containing the GeoPoints code field(s)</documentation>
		</parameter>
		<parameter member="missing"
			to="float"
			default="3.0E+38"
			from="float"
			name="geo_missing_value">
			<documentation>missing value for geopoints</documentation>
		</parameter>
	</class>
</magics>
