<magics>
    <class action="pemagram"
        inherits="Transformation"
        directory="common"
        xmltag="thermo"
        name="Emagram">
        <parameter member="x_min"
            to="float"
            default="0"
            from="float"
            name="x_min"></parameter>
        <parameter member="x_automatic"
            to="bool"
            default="off"
            from="string"
            name="subpage_x_automatic"></parameter>
        <parameter member="y_automatic"
            to="bool"
            default="off"
            from="string"
            name="subpage_y_automatic"></parameter>
        <parameter member="x_max"
            to="float"
            default="100"
            from="float"
            name="x_max"></parameter>
        <parameter member="y_min"
            to="float"
            default="0"
            from="float"
            name="y_min"></parameter>
        <parameter member="y_max"
            to="float"
            default="100"
            from="float"
            name="y_max"></parameter>
        <parameter member="annotation_width"
            to="float"
            default="25"
            from="float"
            name="thermo_annotation_width">
            <documentation>Percentage of the width used to display the annotation on the right side .</documentation>
        </parameter>
    </class>
</magics>
