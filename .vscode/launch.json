    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "(lldb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/local/opt/python/bin/python3.7",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
    ]
}