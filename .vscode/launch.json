{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "(lldb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/local/opt/python/bin/python3.7",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
        {
            "name": "Debug magics on mac",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/magics",
            "args": ["debug.yaml"],
            "cwd": "${workspaceFolder}/regression/climetlab",
            "MIMode": "lldb",
            "env": {
                "MAGPLUS_HOME": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
